<div class="layouts">
  <div class="user-info">
    <h1>User info</h1>
    <%= attachment_image_tag login_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <p>name : <%= login_user.name %></p>
    <p>introduction : <%= login_user.introduction %></p>
    <%= link_to "edit", edit_user_path(current_user.id) %>
  </div>
  <div class="new-book">
    <h1>New book</h1>
    <%= form_with model:newbook, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_field :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>
