<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1 class="mt-3">User info</h1>
        <%= render '/flash' %>
        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label class="name">Name</label><br>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label class="image">Image</label><br>
          <%= f.attachment_field :profile_image, class: "image" %>
        </div>
        <div class="form-group">
          <label class="introduction">Introduction</label><br>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
