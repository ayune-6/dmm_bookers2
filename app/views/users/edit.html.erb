<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_field :introduction %>
  <%= f.submit "Update User" %>
<% end %>