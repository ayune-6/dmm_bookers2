<div class="container">
  <div class="row">
    <%= render '/userinfo_and_newbook', info_user: @info_user, newbook: @newbook %>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
           <tr>
             <th>image</th>
             <th>name</th>
             <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>Show<% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


