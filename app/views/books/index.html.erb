<%= render '/flash' %>
<%= render '/userinfo', info_user: @info_user %>
<%= render '/newbook', newbook: @newbook %>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p>title : <%= book.title %></p>
  <% end %>
  <p>body : <%= book.body %></p>

</div>
<% end %>
<%= paginate @books %>